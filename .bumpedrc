files: [
  'package.json'
]

plugins:

  prerelease:

    'Linting config files':
      plugin: 'bumped-finepack'

  postrelease:


    'Generating CHANGELOG file':
      plugin: 'bumped-changelog'

    'Compiling build':
      plugin: 'bumped-terminal'
      command: 'cd docs && gulp build'

    'Commiting new version':
      plugin: 'bumped-terminal'
      command: 'git add CHANGELOG.md package.json docs/assets/css/build.css && git commit -m "Release $newVersion"'

    'Detecting problem before publish':
      plugin: 'bumped-terminal'
      command: 'git-dirty'

    'Publishing tag at GitHub':
      plugin: 'bumped-terminal'
      command: 'git tag $newVersion && git push && git push --tags'

    'Preparing GitHub Pages':
      plugin: 'bumped-terminal'
      command: 'docpress build'

		'Publishing at GitHub Pages':
			plugin: 'bumped-gh-pages'
			folder: '_docpress'
